/* pages/search/search.wxss */ 
.back{
  position: absolute;
  top: 5vh;
  left: 5vw;
}

.container{
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.header{
  padding-top: 15vh;
  font-size: 45rpx;
}

.content-box{
  height: 75vh;
  padding: 0 5vw;
}

.content{ 
  display: flex;
  flex-direction: column;
  
  align-items: center;
  justify-content: space-around;
  width: 65vw;
  min-height: 70vw;
  margin: 0 auto 90rpx;
  padding:  50rpx 30rpx 70rpx 50rpx;
  box-shadow: rgb(238, 238, 238) 0rpx 4rpx 40rpx;
  border-radius: 45rpx;
  font-size: 34rpx;
  line-height: 60rpx;
}

.content-text{
  margin: 0 auto;
}

