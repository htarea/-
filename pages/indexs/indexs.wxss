/* pages/indexs/indexs.wxss */
.container{
  position: relative;
}

.title{
  font-weight: bold;
  margin-top: 130rpx;
  font-size: 110rpx;
  
}

.search-box{
  display: flex;
  position: absolute;
  z-index: 11;
  width: 100vw;
  justify-content: center;
  flex-direction: row;
  align-items: center;
  padding-top: 10vh;
}

.search-content{
  position: absolute;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  height: 50vh;
  padding-top: 16vh;
  background-color: rgb(255, 255, 255);
  font-size: 30rpx;
  line-height: 60rpx;
}

.search-bg{
  position: absolute;
  z-index: 9;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
}

.search{
  width: 250rpx;
  padding-left: 30rpx;
  border: 1px solid rgb(196, 11, 156);
  border-radius: 30rpx;
  font-size: 30rpx;
}

.search-img{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.content{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 68vh;
  
}

 



.content-left{
  flex: 30;
  border-right: 1rpx solid rgb(235, 233, 233);
  
}

.content-left-title{
  margin: 0 auto 5vh;
  width: 70%;
  border: 1rpx solid rgb(151, 8, 170);
  text-align: center;
  line-height: 80rpx;
  border-radius: 30rpx;
  font-size: 25rpx;
}

.content-left-title1{
  margin: 0 auto 5vh;
  width: 70%;
  border: 1rpx solid rgb(179, 6, 92);
  text-align: center;
  line-height: 80rpx;
  border-radius: 30rpx;
  font-size: 25rpx;
}

.content-right{
  flex:70;
  
}

.content-right-content{
  display: flex;
  position: relative;
  align-items: center;
  width: 52vw;
  min-height: 70vw;
  margin: 0 auto 90rpx;
  padding:  50rpx 23rpx 70rpx 57rpx;
  box-shadow: rgb(238, 238, 238) 0rpx 2rpx 40rpx;
  border-radius: 30rpx;
  font-size: 34rpx;
  line-height: 60rpx;
}

.content-right-text{
  margin: 0 auto;
}

.add{
  position: absolute;
  right:50rpx;
  bottom: 10rpx;
  color: rgba(0, 0, 0, 0.15);
  font-size: 30rpx;
}

.gap{
  height: 1rpx;
}